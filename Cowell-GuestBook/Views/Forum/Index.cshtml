@model IEnumerable<Cowell_GuestBook.Models.Forum>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TITLE)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.TITLE, "index","Article", new { Forumid = item.ID },null)
            @*取得討論區內文張數量*@
            <span class="badge">@item.ARTICLE.Count()</span>
        </td>
        <td>
            <div class="pull-right">
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-sm btn-default" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-default" })
            </div>
        </td>
    </tr>
}

</table>
